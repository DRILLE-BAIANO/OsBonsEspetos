  <script>
    // Executa todo o código quando o documento HTML estiver completamente carregado.
    document.addEventListener('DOMContentLoaded', function () {

      // =================================================================
      // FUNCIONALIDADE 1: FILTRO DE CATEGORIAS
      // =================================================================
      const filterButtons = document.querySelectorAll('.filter-btn');
      const productCards = document.querySelectorAll('.product-card');

      filterButtons.forEach(button => {
        button.addEventListener('click', function () {
          // Lógica para ativar/desativar botões
          filterButtons.forEach(btn => {
            btn.classList.remove('active', 'btn-dark');
            btn.classList.add('btn-outline-dark');
          });
          this.classList.add('active', 'btn-dark');
          this.classList.remove('btn-outline-dark');

          const category = this.getAttribute('data-category');

          // Lógica para mostrar/esconder os cards de produto
          productCards.forEach(card => {
            const productCategory = card.getAttribute('data-product-category');
            if (category === 'all' || productCategory === category) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          });
        });
      });

      // =================================================================
      // FUNCIONALIDADE 2: ADICIONAR PRODUTO AO CARRINHO
      // =================================================================
      const addToCartButtons = document.querySelectorAll('.adicionar-carrinho-btn');

      // Opcional: Se você tiver uma notificação como a do código antigo
      const cartNotification = document.getElementById('cartNotification');

      addToCartButtons.forEach(button => {
        button.addEventListener('click', function () {
          const produtoId = this.getAttribute('data-produto-id');

          // Envia a requisição para o nosso CarrinhoController no back-end
          fetch(`/Carrinho/Adicionar/${produtoId}`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
              // Se você habilitar a proteção AntiForgery, precisará adicionar o token aqui.
            }
          })
            .then(response => {
              if (!response.ok) {
                // Se a resposta do servidor for um erro (ex: 404, 500), lança um erro.
                throw new Error('A resposta da rede não foi OK');
              }
              return response.json();
            })
            .then(data => {
              if (data.sucesso) {
                console.log('Produto adicionado com sucesso! Total de itens no carrinho:', data.totalItens);

                // Mostra uma notificação para o usuário
                // Você pode usar um 'alert' simples ou uma notificação mais elegante.
                alert('Produto adicionado ao carrinho!');

                // Exemplo com a notificação do seu código antigo:
                if (cartNotification) {
                  cartNotification.textContent = 'Produto adicionado ao carrinho!';
                  cartNotification.style.display = 'block';
                  setTimeout(() => {
                    cartNotification.style.display = 'none';
                  }, 3000);
                }

                // Opcional: Atualizar um contador de itens no cabeçalho
                // const cartCounter = document.getElementById('cart-item-count');
                // if (cartCounter) {
                //     cartCounter.textContent = data.totalItens;
                // }
              } else {
                alert('Ocorreu um erro ao adicionar o produto.');
              }
            })
            .catch(error => {
              console.error('Erro ao adicionar ao carrinho:', error);
              alert('Ocorreu um erro de comunicação com o servidor.');
            });
        });
      });

    });
  </script>
