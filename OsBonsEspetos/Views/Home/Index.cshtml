    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Página carregada - inicializando funcionalidades...');

            const cartNotification = document.getElementById('cartNotification');
            const notificationMessage = document.getElementById('notificationMessage');
            const cartCountElement = document.getElementById('cart-count');
            let cartCount = 0;

            // SISTEMA DE FILTRO DE CATEGORIAS CORRIGIDO
            const filterButtons = document.querySelectorAll('.filter-btn');
            const menuCards = document.querySelectorAll('.menu-card');

            filterButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const category = this.getAttribute('data-category');
                    
                    // Atualiza botão ativo
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');

                    // Filtra os cards - CÓDIGO CORRIGIDO
                    menuCards.forEach(card => {
                        const cardCategory = card.getAttribute('data-category');
                        
                        // Remove espaços e converte para minúsculas para comparação consistente
                        const normalizedCategory = category.toLowerCase().trim();
                        const normalizedCardCategory = (cardCategory || '').toLowerCase().trim();
                        
                        if (normalizedCategory === 'all' || normalizedCardCategory === normalizedCategory) {
                            card.style.display = 'flex';
                            card.classList.remove('hidden');
                        } else {
                            card.style.display = 'none';
                            card.classList.add('hidden');
                        }
                    });
                });
            });

            // Função para mostrar notificação
            function showNotification(message, isError = false) {
                if (cartNotification && notificationMessage) {
                    notificationMessage.textContent = message;
                    cartNotification.className = 'cart-notification';
                    
                    if (isError) {
                        cartNotification.classList.add('error');
                    }
                    
                    cartNotification.style.display = 'block';
                    
                    setTimeout(() => {
                        cartNotification.style.display = 'none';
                    }, 3000);
                }
            }

            // Função para atualizar contador do carrinho
            function updateCartCount() {
                cartCount++;
                if (cartCountElement) {
                    cartCountElement.textContent = `Carrinho (${cartCount})`;
                    cartCountElement.classList.add('pulse');
                    
                    setTimeout(() => {
                        cartCountElement.classList.remove('pulse');
                    }, 1000);
                }
            }

            // Adiciona evento a todos os formulários de carrinho
            const cartForms = document.querySelectorAll('.add-to-cart-form');
            
            cartForms.forEach(form => {
                form.addEventListener('submit', async function (e) {
                    e.preventDefault(); // Impede o submit padrão
                    
                    const button = this.querySelector('.add-to-cart-btn');
                    const produtoId = button.getAttribute('data-produto-id');
                    const produtoNome = button.getAttribute('data-produto-nome');
                    
                    // Estado de loading
                    button.disabled = true;
                    button.classList.add('loading');
                    button.innerHTML = '<span class="material-icons" aria-hidden="true">hourglass_empty</span> ADICIONANDO...';

                    try {
                        const formData = new FormData(this);
                        
                        const response = await fetch('/Carrinho/Adicionar', {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (!response.ok) {
                            throw new Error(`Erro HTTP: ${response.status}`);
                        }

                        const data = await response.json();
                        console.log('Resposta do servidor:', data);

                        if (data.success) {
                            showNotification(`✅ ${produtoNome} adicionado ao carrinho!`);
                            updateCartCount();
                            
                            // Aguarda um pouco antes de redirecionar opcionalmente
                            setTimeout(() => {
                                // Opcional: redirecionar para o carrinho
                                // window.location.href = '/Carrinho';
                            }, 1000);
                            
                        } else {
                            showNotification(`❌ ${data.message || 'Erro ao adicionar produto'}`, true);
                        }

                    } catch (error) {
                        console.error('Erro ao adicionar produto:', error);
                        showNotification('❌ Erro de conexão. Tente novamente.', true);
                    } finally {
                        // Restaura o botão
                        button.disabled = false;
                        button.classList.remove('loading');
                        button.innerHTML = '<span class="material-icons" aria-hidden="true">shopping_cart</span> ADICIONAR AO CARRINHO';
                    }
                });
            });

            // Efeito de hover nos cards
            menuCards.forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-8px)';
                });
                
                card.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Teste inicial do filtro
            console.log('Filtros inicializados:', filterButtons.length);
            console.log('Cards de menu encontrados:', menuCards.length);

            console.log('Funcionalidades da página inicializadas com sucesso!');
        });
    </script>

