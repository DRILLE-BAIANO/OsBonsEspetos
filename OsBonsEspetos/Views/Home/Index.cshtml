    }

    .news-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-bottom: 1px solid #e5e7eb;
      border-radius: 0.75rem 0.75rem 0 0;
    }

    .news-content {
      padding: 1.25rem 1.5rem;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .news-category {
      color: #ef4444;
      font-weight: 700;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .news-title {
      font-size: 1.125rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 0.5rem;
      line-height: 1.25;
    }

    .news-date {
      color: #6b7280;
      font-size: 0.85rem;
      margin-bottom: 1rem;
    }

    /* Footer */
    footer {
      background-color: #f9fafb;
      padding: 3rem 1rem;
      margin-top: 4rem;
      color: #6b7280;
      font-size: 0.9rem;
    }

    footer .container {
