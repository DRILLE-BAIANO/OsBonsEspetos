@model OsBonsEspetos.ViewModels.CarrinhoViewModel

@{
    ViewData["Title"] = "Meu Carrinho de Compras";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Os Bons Espetos</title>
    <style>
        /* Seus estilos CSS aqui - mantenha os mesmos estilos do carrinho */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Arial, sans-serif;
        }
        
        body {
            background-color: #ffffff;
            color: #333333;
            line-height: 1.6;
        }
        
        .header {
            background-color: #1a1a1a;
            color: white;
            padding: 2rem 0;
            text-align: center;
            border-bottom: 3px solid #d4af37;
        }
        
        .header h1 {
            font-size: 2.5rem;
            font-weight: 300;
            letter-spacing: 2px;
            text-transform: uppercase;
        }
        
        .container {
            max-width: 1000px;
            margin: 3rem auto;
            padding: 0 2rem;
        }
        
        .page-header {
            text-align: center;
            margin-bottom: 3rem;
        }
        
        .page-header h2 {
            font-size: 2rem;
            color: #1a1a1a;
            margin-bottom: 1rem;
            font-weight: 400;
        }
        
        .cart-section {
            background-color: #fafafa;
            border: 1px solid #e0e0e0;
            padding: 2.5rem;
            margin-bottom: 2rem;
        }
        
        .cart-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }
        
        .cart-table thead {
            border-bottom: 2px solid #1a1a1a;
        }
        
        .cart-table th {
            padding: 1.5rem 1rem;
            text-align: left;
            font-weight: 500;
            color: #1a1a1a;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .cart-table td {
            padding: 1.5rem 1rem;
            border-bottom: 1px solid #e0e0e0;
            vertical-align: middle;
            color: #444;
        }
        
        .btn {
            display: inline-block;
            padding: 0.8rem 1.8rem;
            border-radius: 0;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 0.95rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .btn-primary {
            background-color: #1a1a1a;
            color: white;
            border: 1px solid #1a1a1a;
        }
        
        .btn-danger {
            background-color: transparent;
            color: #d32f2f;
            border: 1px solid #d32f2f;
        }
        
        .btn-danger:hover {
            background-color: #d32f2f;
            color: white;
        }
        
        .btn-sm {
            padding: 0.6rem 1.2rem;
            font-size: 0.85rem;
        }
        
        .alert-info {
            background-color: #f8f8f8;
            color: #444;
            padding: 2rem;
            border: 1px solid #e0e0e0;
            margin-bottom: 2rem;
            text-align: center;
        }
        
        footer {
            background-color: #1a1a1a;
            color: white;
            text-align: center;
            padding: 2.5rem 1rem;
            margin-top: 4rem;
        }
        
        @@media (max-width: 768px) {
            .cart-table {
                display: block;
                overflow-x: auto;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <h1>Os Bons Espetos</h1>
    </header>

    <div class="container">
        <div class="page-header">
            <h2>@ViewData["Title"]</h2>
            <p>Confira os itens do seu pedido e finalize a compra.</p>
        </div>

        @if (Model != null && Model.Itens.Any())
        {
            <div class="cart-section">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th class="text-center">Quantidade</th>
                            <th class="text-end">Preço Unitário</th>
                            <th class="text-end">Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Itens)
                        {
                            <tr>
                                <td>@item.Produto.Nome</td>
                                <td class="text-center">@item.Quantidade</td>
                                <td class="text-end">@item.PrecoUnitario.ToString("C")</td>
                                <td class="text-end">@item.Subtotal.ToString("C")</td>
                                <td class="text-end">
                                    <form asp-controller="Carrinho" asp-action="Remover" asp-route-id="@item.ProdutoId" method="post">
                                        <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>Total do Pedido</strong></td>
                            <td class="text-end"><strong>@Model.TotalCarrinho.ToString("C")</strong></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>

                <div class="text-center">
                    <a href="#" class="btn btn-primary">Finalizar Pedido</a>
                </div>
            </div>
        }
        else
        {
            <div class="alert-info">
                <p>Seu carrinho está vazio.</p>
            </div>
            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ver o Menu</a>
            </div>
        }
    </div>

    <footer>
        <p>© 2025 - OsBonsEspetos</p>
        <p>Privacy</p>
        <p>localhost:5079</p>
    </footer>
</body>
</html>