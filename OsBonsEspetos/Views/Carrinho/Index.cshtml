@model IEnumerable<OsBonsEspetos.Models.ItemCarrinho>
@{
    ViewData["Title"] = "Meu Carrinho de Compras";
    // A linha abaixo garante que esta página usará o layout principal
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Calcula o total do pedido
    decimal totalPedido = Model.Sum(item => item.Quantidade * item.Produto.Preco);
}

<div class="container mt-5 cart-container">
    <div class="text-center mb-4">
        <h1 class="cart-title" style="font-weight: 700; color: #333;">Meu Carrinho</h1>
        <p class="lead cart-description">Confira os itens do seu pedido e finalize a compra.</p>
    </div>

    @if (Model.Any())
    {
        <table class="table table-hover align-middle cart-table">
            <thead class="table-light">
                <tr>
                    <th scope="col">Produto</th>
                    <th scope="col" class="text-center">Quantidade</th>
                    <th scope="col" class="text-end">Preço Unitário</th>
                    <th scope="col" class="text-end">Subtotal</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <!-- Assumindo que você tem uma imagem para o produto -->
                                <!-- <img src="@item.Produto.ImagemUrl" class="img-fluid rounded cart-product-image" style="width: 60px; height: 60px; object-fit: cover; margin-right: 15px;"> -->
                                <span style="font-weight: 600;">@item.Produto.Nome</span>
                            </div>
                        </td>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-end">@item.Produto.Preco.ToString("C")</td>
                        <td class="text-end">@((item.Quantidade * item.Produto.Preco).ToString("C"))</td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-outline-danger cart-remove-button">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end" style="font-weight: 700; font-size: 1.2rem;">Total</td>
                    <td class="text-end" style="font-weight: 700; font-size: 1.2rem;">@totalPedido.ToString("C")</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-center mt-4">
            <a href="#" class="btn btn-lg cart-checkout-button" style="background-color: #212529; color: white; padding: 12px 30px;">Finalizar Pedido</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <p>Seu carrinho está vazio.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ver o Menu</a>
        </div>
    }
</div>
